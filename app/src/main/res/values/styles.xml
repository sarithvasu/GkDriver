<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="loginPage">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="HeaderMain">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/polygone</item>
    </style>

    <style name="menu">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="radioButton">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CommonPadding">
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="LeftMargin">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="ContactUsPadding" >

        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TestSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#fff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="divderLine">
    <item name="android:layout_marginRight">1dp</item>
    <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
</style>
    <style name="editTextStyle" >
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/rounded_corner_edittext</item>
        <item name="android:textColorHint">@color/faq_answer</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="editTextTranspenStyle" >
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColorHint">@android:color/white</item>

    </style>






    <!--sumanth style-->
    <style name="buttonstyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--add textalinment center in xml file -->
    <style name="textButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/polygone1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textViewtyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/polygone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/faq_answer</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="textWhiteStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/polygone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/rounded_corner_edittext</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

    </style>
    <style name="delivery">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
